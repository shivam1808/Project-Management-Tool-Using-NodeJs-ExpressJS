<%- include('layout/header') %> 

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">Add New Project</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name">Project Name</label>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter Project Name" autocomplete="off" required />
                        </div>
                        <div class="mb-3">
                            <label for="description">Project Description</label>
                            <textarea class="form-control form-control-lg" name="description" rows="3" cols="30" placeholder="Enter Project Description" autocomplete="off"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="tech">Tech Used</label>
                            <input type="text" name="tech" class="form-control form-control-lg" placeholder="Enter Tech Used" autocomplete="off" required />
                        </div>
                        <div class="mb-3">
                            <label for="link">Project Link</label>
                            <input type="text" name="link" class="form-control form-control-lg" placeholder="Enter Project Link" autocomplete="off" required />
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Select Project Image</label>
                            <input type="file" name="image" class="form-control form-control-lg" autocomplete="off" required />
                        </div>
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Add User" class="btn btn-primary btn-lg" />                            
                        </div>
                    </form>
                </div>
            </div>            
        </div>
    </div>
</div>

<%- include('layout/footer') %> 
